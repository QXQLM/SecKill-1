<Window x:Class="SecKill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecKill"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGrid">
            
        </DataGrid>
        <DockPanel Grid.Column="1" Grid.RowSpan="3">
            <TextBlock DockPanel.Dock="Top"> 日志记录：</TextBlock>
            <TextBox Margin="5" Background="LightGray">
            </TextBox>
        </DockPanel>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="SettingCookie">设置Cookie</Button>
            <Button x:Name="SwitchMember">选择成员</Button>
            <Button x:Name="RefreshVaccineList">刷新疫苗列表</Button>
            <Button x:Name="StartKill">开始</Button>
        </WrapPanel>
        <WrapPanel Grid.Row="2" VerticalAlignment="Center">
            <ComboBox x:Name="Province" Width="150" Height="40" DisplayMemberPath="Name" SelectedValuePath="Value" IsReadOnly="True"
                      HorizontalAlignment="Left" VerticalAlignment="Top" Selected="Province_Selected"/>
            <ComboBox x:Name="City"></ComboBox>
            <Button x:Name="Confirm">确定</Button>
        </WrapPanel>
    </Grid>
</Window>
